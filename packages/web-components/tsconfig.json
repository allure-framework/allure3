{
  "extends": "../../tsconfig.json",
  "include": ["./src", "global.d.ts"],
  "exclude": ["node_modules", ".yarn", "**/*.test.tsx", "**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "types": [],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
