{
  "extends": "../../tsconfig.json",
  "include": [
    "./src",
    "global.d.ts",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2019",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "types": [],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "exclude": [
    "node_modules",
    ".yarn"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
